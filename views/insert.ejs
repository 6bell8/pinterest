<%- include("include/header") %>
<main id="main">
  <form action="/register" method="POST" id="join" class="formBox" enctype="multipart/form-data">
    <div class="inputBox">
      <label>
        <span class="label">제목</span>
        <input type="text" id="title" name="title" placeholder="제목을 입력하세요" />
      </label>
    </div>
    <div class="inputBox">
      <label>
        <span class="label">날짜</span>
        <input type="text" id="date" name="date" placeholder="개봉날짜" />
      </label>
    </div>
    <div class="inputBox">
      <label>
        <span class="label">카테고리</span>
        <div class="">
          <ul class="genreList">
            <li><span>paint</span><input type="checkbox" value="paint" name="catagory" /></li>
            <li><span>photo</span><input type="checkbox" value="photo" name="catagory" /></li>
            <li><span>sketch</span><input type="checkbox" value="sketch" name="catagory" /></li>
          </ul>
        </div>
      </label>
    </div>
    <div class="inputBox">
      <label>
        <span class="label">내용</span>
        <textarea name="desc" id="desc" cols="30" rows="10"></textarea>
      </label>
    </div>
    <div class="inputBox">
      <label>
        <span class="label">평점</span>
        <input type="number" max="5" min="0" step="0.1" id="point" name="point" />
      </label>
    </div>
    <div class="inputBox">
      <label>
        <span class="label">대표이미지</span>
        <input type="file" name="image" id="image" />
      </label>
    </div>
    <div class="btns">
      <button type="submit" data-value="10" id="btnJoin">확인</button>
      <button type="reset">취소</button>
    </div>
  </form>
</main>
<script>
  const date = document.querySelector("#date");
  const picker = new Lightpick({ field: date, format: "YYYY-MM-DD" });
</script>

<%- include("include/footer") %>
